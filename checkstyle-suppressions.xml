<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.1//EN"
    "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">

<suppressions>
    <!-- Using custom indentation for test parameters -->
    <suppress checks="Indentation" files=".*/src/test/*."/>
    <suppress checks="Javadoc(Type|Variable)" files=".*/src/test/*."/>
    <suppress checks="NoWhitespaceAfter" files=".*/src/test/*."/>
    <suppress checks="WhitespaceAround" files=".*/src/test/*."/>
    <!-- Byte array literals are used in tests -->
    <suppress checks="MagicNumber" files=".*/src/test/*."/>
    <!-- Visibility modifiers make no sensor for tests and only create clutter -->
    <suppress checks="VisibilityModifier" files=".*/src/test/*."/>
    <!-- No need for finals in tests -->
    <suppress checks="FinalParameters" files=".*/src/test/*."/>
</suppressions>
